<cu-custom bgColor="bg-gradual-blue" isCustom="{{true}}">
    <view slot="content">个人资料</view>
    <view class="action" slot="right"></view>
</cu-custom>
<form action="">
    <view class="cu-form-group margin-top solid-bottom">
        <view class="title">姓名</view>
        <input placeholder="请输入姓名"></input>
    </view>
    <view class="cu-form-group margin-top solid-bottom sex_form">
        <view class="title">性别</view>
        <switch class="switch-sex"  checked></switch>
    </view>
    <view class="cu-form-group margin-top solid-bottom">
        <view class="title">年龄</view>
        <input placeholder="请输入年龄" type="number"></input>
    </view>
    <view class="cu-form-group margin-top solid-bottom">
        <view class="title">联系电话</view>
        <input placeholder="请输入联系电话" type="number"></input>
        <view class="cu-capsule radius">
            <view class="cu-tag bg-blue" id="biaoqian">+86</view>
            <view class="cu-tag line-blue">中国大陆</view>
        </view>
    </view>
    <view class="cu-form-group margin-top solid-bottom">
        <view class="title">身份证号</view>
        <input placeholder="请输入身份证号" type="idcard"></input>
    </view>
    <view class="cu-form-group margin-top solid-bottom">
        <view class="title">证件期限</view>
        <picker mode="date" value="{{bDate}}" start="2015-09-01" end="2020-09-01" bindchange="beginDateChange">
            <view class="picker">{{bDate}}</view>
        </picker>
        <view class="cu-capsule radius">
            <view class="cu-tag bg-green biaoqian">起始日期</view>
        </view>
    </view>
    <view class="cu-form-group margin-top solid-bottom">
        <view class="title">证件期限</view>
        <picker mode="date" value="{{eDate}}" start="2015-09-01" end="2020-09-01" bindchange="endDateChange">
            <view class="picker">{{eDate}}</view>
        </picker>
        <view class="cu-capsule radius">
            <view class="cu-tag bg-red biaoqian">截止日期</view>
        </view>
    </view>
    <view class="cu-form-group margin-top solid-bottom">
        <view class="title">所在地区</view>
        <picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
            <view class="picker">{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
        </picker>
    </view>
    <view class="cu-form-group align-start margin-top">
        <view class="title">详细地址</view>
        <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="多行文本输入框"></textarea>
    </view>
</form>
<view class="addBtn shadow shadow-lg bg-green" hover-class="none" hover-stop-propagation="false" id="queding">
    添加
</view>
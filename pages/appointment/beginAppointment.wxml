<import src="../../wxParse/wxParse.wxml" />
<cu-custom bgColor="bg-gradual-pink" isCustom="{{true}}">
    <view slot="content">开始预约</view>
    <view class="action" slot="right"></view>
</cu-custom>
<form>
    <view class="cu-form-group margin-top">
        <view class="title text-pink">
            <text class="cuIcon-clothesfill text-pink"></text>
            选择宝宝
        </view>
        <picker bindchange="chooseBaby" value="{{index}}" range="{{babyList}}" range-key="baby_name">
            <view class="picker">{{index?babyList[index].baby_name:'请选择'}}</view>
        </picker>
    </view>
</form>
<view class="baby_content margin-top shadow-warp bg-white ">
    <view class="cu-bar bg-white">
        <view class="action">
            <text class="cuIcon-titles text-green"></text>
            <text class="text-df">宝宝基本信息</text>
        </view>
    </view>
    <view class="baby_info">
        <view style=" overflow: hidden; ">
            <view class="name">姓名：name</view>
            <view class="sex">性别：男</view>
        </view>
        <view class="birth">出生日期：2019-12-12</view>
    </view>
</view>
<view class="inj_content margin-top shadow-warp bg-white">
    <view class="cu-bar bg-white">
        <view class="action">
            <text class="cuIcon-titles text-green"></text>
            <text class="text-df">即将接种疫苗</text>
        </view>
    </view>
    <view class="inj_info">
        <view class="inj_name">疫苗名称：444</view>
    </view>
    <view class="inj_info">
        <view class="inj_date">建议接种日期：</view>
    </view>
    <view class="inj_introduce_btn " bind:tap="showVacModal">点击查看疫苗简介</view>
</view>
<view class="cu-modal bottom-modal {{show?'show':''}}" scroll-y>
    <!-- <scroll-view> -->
        <view class="cu-dialog">
            <view class="cu-bar bg-white">
                <view class="action text-blue" bindtap="hideModal" style="font-size:28rpx">
                    需接种
                    <text class="ym_num">{{vacList.length}}</text>
                    针疫苗
                </view>
                <view class="action text-green" bindtap="hideModal">确定</view>
            </view>
            <!-- 以下为弹框内容 -->
            <view class="bg-white margin-bottom" wx:for="{{vacTextArr}}" wx:for-item="item" wx:key wx:for-index="i">
                <view class="cu-bar bg-white">
                    <view class="action">
                        <text class="cuIcon-title text-green"></text>
                        <text>{{vacList[i].v_name}}</text>
                    </view>
                </view>
                <view class="ym_yongtu text-blue">{{vacList[i].ym_yongtu}}</view>
                <view class="neirong padding-xl text-left text-sm">
                    <template is="wxParse" data="{{wxParseData:item}}" />
                </view>
            </view>
        </view>
    <!-- </scroll-view> -->
</view>